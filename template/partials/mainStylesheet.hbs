/*
 * GLOBAL
 */
html, body {
  height: 100%; }

body {
  margin: 0 auto; }

h1 {
  font-size: 9rem; }

/*
 * HELPERS
 */
.livingcss__inverse-text {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  color: white; }

.livingcss__inverse-text a {
  color: white; }

.livingcss__inverse-text a:hover,
.livingcss__inverse-text a:active,
.livingcss__inverse-text a:focus {
  color: white; }

/*
 * NAV
 */
.livingcss__nav {
  order: 1; }

.livingcss__nav-container {
  margin-top: 1.625rem; }

/*
 * MOBILE BREAKPOINT
 */
@media (max-width: 992px) {
  .livingcss__main-nav {
    position: fixed;
    top: 0;
    right: -14rem;
    bottom: 0;
    width: 13rem;
    background: #fdfdfd;
    border-left: 1px solid #B6B6B6;
    transition: right 0.2s;
    padding: 0; }
  .livingcss__main-nav--open .livingcss__wrapper {
    right: 13rem; }
  .livingcss__main-nav--open .livingcss__main-nav {
    right: 0;
    box-shadow: -2px 0px 6px rgba(0, 0, 0, 0.2); }
  .livingcss__main-nav-container {
    padding: 0; }
  .livingcss__nav-link {
    border-bottom: 1px solid #B6B6B6; }
  .livingcss__nav {
    display: none; } }

/*
 * DESKTOP BREAKPOINT
 */
@media (min-width: 993px) {
  .livingcss__nav {
    flex: 0 0 13rem;
    padding-right: 0.8125rem; }
  .livingcss__main-nav-container {
    border-bottom: 1px solid #B6B6B6; }
  .livingcss__nav-link--main {
    display: inline-block; }
  .livingcss__nav--fixed .livingcss__nav-container {
    position: fixed;
    top: 0;
    width: 13rem; }
  .livingcss__menu {
    display: none; }
  .livingcss__nav-link--main {
    font-size: 0.875rem;
    line-height: 1rem; } }

/*
 * GRID
 */
.livingcss__wrapper {
  min-height: 100%;
  position: relative;
  transition: right 0.2s;
  right: 0; }

.livingcss__container {
  padding-left: 0.8125rem;
  padding-right: 0.8125rem;
  margin: 0 auto; }

/*
 * TYPOGRAPHY
 */
/*
  BASELINE FONT - 16px
  BASELINE GRID - 1.625rem

  MODULAR FONT SCALE
  ------------------
  14px - small
  16px - body, H6
  18px - H5
  22px - H4
  26px - H3
  30px - H2
  36px - H1
*/
/*
 * CONTENT
 */
.livingcss__content {
  padding-bottom: 6.5rem; }
  @media (min-width: 993px) {
    .livingcss__content {
      display: flex;
      flex-direction: row; } }

/*
 * MAIN
 */
@media (min-width: 993px) {
  .livingcss__container {
    max-width: 964px;
    padding-left: 0;
    padding-right: 0; } }

@media (min-width: 1200px) {
  .livingcss__container {
    max-width: 1170px; } }

.livingcss__main {
  margin-top: 1.625rem;
  order: 2; }
  @media (min-width: 993px) {
    .livingcss__main {
      flex: 1;
      max-width: 729px;
      padding-left: 0.8125rem; } }
  @media (min-width: 1200px) {
    .livingcss__main {
      max-width: 935px; } }

.livingcss__article-title {
  border-bottom: 1px solid #727272;
  margin-bottom: 1.625rem; }

.livingcss__article:first-child .livingcss__article-title {
  margin-top: 0; }

.livingcss__article + .livingcss__article {
  margin-top: 4.875rem; }

.livingcss__section {
  margin-top: 1.625rem; }

livingcss-example {
  margin-top: 1em;
  display: block;
  border: 1px solid #B6B6B6;
  padding: 1rem;
  border-radius: .25rem .25rem 0 0; }

.livingcss__section-markup {
  border: 1px solid #B6B6B6;
  border-top: 0;
  border-radius: 0 0 .25rem .25rem; }

.livingcss__section-code,
.livingcss__section-code[class*="language-"] {
  margin: 0;
  border-radius: 0 0 .25rem .25rem;
  padding: 0.40625rem 0.8125rem;
  line-height: 1.625rem; }

/*
 * HEADER
 */
.livingcss__header {
  position: relative; }

.livingcss__header-title-container {
  background: #2196F3;
  padding: 0.8125rem 0; }

.livingcss__header-title {
  font-size: 1.625rem;
  line-height: 1.625rem; }

.livingcss__main-nav-container {
  padding: 0.40625rem 0; }

.livingcss__nav-link {
  display: block;
  padding: 0.40625rem 0.8125rem; }

a.livingcss__nav-link:hover,
a.livingcss__nav-link:active,
a.livingcss__nav-link:focus,
a.livingcss__nav-link--active {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background: #2196F3;
  color: white;
  text-decoration: none; }

.livingcss__menu {
  position: absolute;
  right: 1.625rem;
  top: 50%;
  transform: translateY(-50%);
  border: 0;
  font-size: 1rem;
  background: transparent;
  cursor: pointer;
  background: #1976D2;
  padding: 0.40625rem 0.8125rem; }

/*
 * FOOTER
 */
.livingcss__footer {
  background: #1976D2;
  bottom: 0;
  color: #727272;
  left: 0;
  padding: 1rem 0;
  position: absolute;
  right: 0;
  text-align: right; }

.livingcss__footer a {
  font-weight: bold; }

