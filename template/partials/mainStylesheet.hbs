/*
 * GLOBAL
 */
html, body {
  height: 100%; }

body {
  margin: 0 auto;
  overflow-x: hidden; }

a {
  color: #207394; }

/*
 * HELPERS
*/
.clearfix:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0; }

.clearfix {
  display: inline-block; }

/* start commented backslash hack \*/
* html .clearfix {
  height: 1%; }

.clearfix {
  display: block; }

/* close commented backslash hack */
/*
 * GRID
 */
.livingcss__wrapper {
  min-height: 100%;
  position: relative;
  transition: right 0.2s;
  right: 0; }

.livingcss__main {
  box-sizing: border-box;
  padding: 0.5rem 1rem;
  margin-top: 0.5rem; }

@media (min-width: 720px) {
  .livingcss__main {
    width: 62.5%;
    float: right; }
  .livingcss__sidenav {
    width: 32.5%;
    float: left; } }

@media (min-width: 993px) {
  .livingcss__main {
    width: 72.5%; }
  .livingcss__sidenav {
    width: 22.5%; } }

/*
 * MAIN
 */
.livingcss__content::after {
  clear: both;
  content: "";
  display: table; }

.livingcss__article-title {
  border-bottom: 1px solid #727272;
  margin-bottom: 1.625rem; }
  .livingcss__article:first-child .livingcss__article-title {
    margin-top: 0; }

.livingcss__article + .livingcss__article {
  margin-top: 4.875rem; }

.livingcss__section {
  margin-top: 1.625rem; }

livingcss-example {
  margin-top: 1em;
  display: block;
  border: 1px solid #B6B6B6;
  padding: 1rem;
  border-radius: .25rem .25rem 0 0; }

.livingcss__section-markup {
  border: 1px solid #B6B6B6;
  border-top: 0;
  border-radius: 0 0 .25rem .25rem; }

.livingcss__section-code,
.livingcss__section-code[class*="language-"] {
  margin: 0;
  border-radius: 0 0 .25rem .25rem;
  padding: 0.40625rem 0.8125rem;
  line-height: 1.625rem; }

/*
  HEADER

  The top banner with the title, logo, and links to different sections

*/
.livingcss__header {
  position: relative; }

.livingcss__header-title-container {
  padding: 1rem 2rem;
  background: #833118; }
  .livingcss__header-title-container::after {
    clear: both;
    content: "";
    display: table; }

.livingcss__header-title {
  padding-right: 4em;
  font-size: 1.625rem;
  line-height: 1.625rem; }
  .livingcss__header-title a {
    color: #eee;
    text-decoration: none; }
    .livingcss__header-title a:hover {
      text-decoration: underline; }
  @media (min-width: 720px) {
    .livingcss__header-title {
      width: 33%;
      float: left;
      padding-right: 0em; } }

.livingcss__header-logo {
  width: 100%;
  padding-right: 6em;
  box-sizing: border-box; }
  .livingcss__header-logo img {
    max-width: 100%; }
  @media (min-width: 720px) {
    .livingcss__header-logo {
      width: 33%;
      float: right;
      padding-right: 0;
      text-align: right; } }

/*
 * FOOTER
 */
.livingcss__footer {
  padding: 1rem 2rem;
  margin-top: 2rem;
  text-align: left;
  color: #eee;
  background: #833118; }
  .livingcss__footer a {
    font-weight: bold;
    color: #eee; }

.livingcss__navbar {
  text-align: center;
  border-bottom: 1px solid #833118; }
  @media (max-width: 720px) {
    .livingcss__navbar {
      display: none; } }

.livingcss__navbar-link {
  display: inline-block;
  margin: 0.5rem;
  padding: 0.5rem;
  color: #207394;
  text-decoration: none; }
  .livingcss__navbar-link[href="index.html"] {
    display: none; }

.livingcss__navbar-link:hover,
.livingcss__navbar-link:active,
.livingcss__navbar-link:focus,
.livingcss__navbar-link--active {
  color: #eee;
  background-color: #207394; }

.livingcss__sidenav {
  display: none; }
  @media (min-width: 720px) {
    .livingcss__sidenav {
      display: block; } }

.livingcss__sidenav-container {
  box-sizing: border-box;
  padding-left: 1rem; }

.livingcss__sidenav-menu1 {
  padding-left: 0; }

.livingcss__sidenav-menu2 {
  padding-left: 1rem; }

.livingcss__sidenav-link {
  display: block;
  padding: 0.5rem 1rem;
  color: #207394;
  text-decoration: none; }

.livingcss__sidenav-link:hover,
.livingcss__sidenav-link:active,
.livingcss__sidenav-link:focus,
.livingcss__sidenav-link--active {
  font-weight: 700;
  text-decoration: none;
  border-left: 3px solid #207394; }

.livingcss__sidenav-container ul {
  list-style-type: none; }

@media (min-width: 720px) {
  .livingcss__sidenav--fixed .livingcss__sidenav-container {
    position: fixed;
    top: 0;
    width: 13rem; } }

.livingcss__sidenav-child-links {
  display: none; }
  .livingcss__sidenav-parent-link--expanded .livingcss__sidenav-child-links {
    display: block; }

/* 

  Off Canvas Menu

  The side menu for mobile screens

*/
.livingcss__menu {
  position: absolute;
  right: 1.625rem;
  top: 50%;
  transform: translateY(-50%);
  border: 0;
  font-size: 1rem;
  background: transparent;
  cursor: pointer;
  background: #1976D2;
  padding: 0.40625rem 0.8125rem; }
  @media (min-width: 720px) {
    .livingcss__menu {
      display: none; } }

.livingcss__off-canvas-menu {
  position: absolute;
  top: 0;
  right: -13rem;
  width: 13rem; }
  @media (max-width: 720px) {
    .livingcss__navbar--open .livingcss__off-canvas-menu {
      right: 0; } }
  .livingcss__off-canvas-menu ul {
    margin-left: 0;
    padding-left: 0;
    list-style-type: none; }
  .livingcss__off-canvas-menu li:last-of-type a {
    border-bottom: 1px solid #ee8329; }
  .livingcss__off-canvas-menu li[data-nav-id="index.html"] {
    display: none; }

.livingcss__off-canvas-link--main {
  display: block;
  padding: 1rem 0;
  border-top: 1px solid #ee8329;
  color: #626262;
  text-align: center;
  text-decoration: none; }

.livingcss__off-canvas-link--active {
  font-weight: 700; }

.livingcss__off-canvas-menu-title {
  text-align: center; }
