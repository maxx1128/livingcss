/*
 * GLOBAL
 */
html, body {
  height: 100%; }

body {
  margin: 0 auto; }

/*
 * HELPERS
 */
.livingcss__inverse-text {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  color: white; }

.livingcss__inverse-text a {
  color: white; }

.livingcss__inverse-text a:hover,
.livingcss__inverse-text a:active,
.livingcss__inverse-text a:focus {
  color: white; }

.clearfix:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0; }

.clearfix {
  display: inline-block; }

/* start commented backslash hack \*/
* html .clearfix {
  height: 1%; }

.clearfix {
  display: block; }

/* close commented backslash hack */
@media (max-width: 992px) {
  .livingcss__main-nav--open .livingcss__main-nav {
    right: 0;
    box-shadow: -2px 0px 6px rgba(0, 0, 0, 0.2); } }

.livingcss__nav-menu1,
.livingcss__nav-menu2 {
  list-style-type: none; }
  .livingcss__nav-menu1 li,
  .livingcss__nav-menu2 li {
    border-left: 3px solid #00F; }

.livingcss__nav-menu1 {
  padding-left: 0; }

.livingcss__nav-menu2 {
  padding-left: 1rem; }

@media (min-width: 720px) {
  .livingcss__nav-link--main {
    display: inline-block;
    font-size: 0.875rem;
    line-height: 1rem; } }

.livingcss__nav-link--main[href="index.html"] {
  display: none; }

@media (min-width: 720px) {
  .livingcss__nav--fixed .livingcss__nav-container {
    position: fixed;
    top: 0;
    width: 13rem; } }

@media (min-width: 720px) {
  .livingcss__menu {
    display: none; } }

.livingcss__child-links {
  display: none; }
  .livingcss__parent-link--expanded .livingcss__child-links {
    display: block; }

/*
 * GRID
 */
.livingcss__wrapper {
  min-height: 100%;
  position: relative;
  transition: right 0.2s;
  right: 0; }

.livingcss__nav,
.livingcss__main {
  box-sizing: border-box;
  padding: 0.5rem 1rem;
  margin-top: 0.5rem; }

@media (min-width: 720px) {
  .livingcss__main {
    width: 62.5%;
    float: right; }
  .livingcss__nav {
    width: 32.5%;
    float: left; } }

@media (min-width: 993px) {
  .livingcss__main {
    width: 72.5%; }
  .livingcss__nav {
    width: 22.5%; } }

@media (max-width: 992px) {
  .livingcss__main-nav--open .livingcss__wrapper {
    right: 13rem; } }

/*
 * MAIN
 */
.livingcss__article-title {
  border-bottom: 1px solid #727272;
  margin-bottom: 1.625rem; }
  .livingcss__article:first-child .livingcss__article-title {
    margin-top: 0; }

.livingcss__article + .livingcss__article {
  margin-top: 4.875rem; }

.livingcss__section {
  margin-top: 1.625rem; }

livingcss-example {
  margin-top: 1em;
  display: block;
  border: 1px solid #B6B6B6;
  padding: 1rem;
  border-radius: .25rem .25rem 0 0; }

.livingcss__section-markup {
  border: 1px solid #B6B6B6;
  border-top: 0;
  border-radius: 0 0 .25rem .25rem; }

.livingcss__section-code,
.livingcss__section-code[class*="language-"] {
  margin: 0;
  border-radius: 0 0 .25rem .25rem;
  padding: 0.40625rem 0.8125rem;
  line-height: 1.625rem; }

/*
 * HEADER
 */
.livingcss__header {
  position: relative; }

.livingcss__header-title-container {
  background: #00F;
  padding: 1rem; }

.livingcss__header-title {
  font-size: 1.625rem;
  line-height: 1.625rem; }
  .livingcss__header-title a {
    color: #FFF !important; }

.livingcss__main-nav-container {
  padding: 0.5rem 1rem;
  border-bottom: 1px solid #009; }

.livingcss__nav-link {
  display: block;
  padding: 0.40625rem 0.8125rem; }

a.livingcss__nav-link:hover,
a.livingcss__nav-link:active,
a.livingcss__nav-link:focus,
a.livingcss__nav-link--active {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background: #99F !important;
  color: #FFF !important;
  text-decoration: none; }

.livingcss__menu {
  position: absolute;
  right: 1.625rem;
  top: 50%;
  transform: translateY(-50%);
  border: 0;
  font-size: 1rem;
  background: transparent;
  cursor: pointer;
  background: #1976D2;
  padding: 0.40625rem 0.8125rem; }

/*
 * FOOTER
 */
.livingcss__footer {
  padding: 1rem;
  margin-top: 2rem;
  text-align: right;
  color: #FFF;
  background: #00F; }
  .livingcss__footer a {
    font-weight: bold; }

